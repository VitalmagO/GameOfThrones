<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivCharacterIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/stark_icon"
        />

    <TextView
        android:id="@+id/tvCharacterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tvCharacterCulture"
        app:layout_constraintStart_toEndOf="@+id/ivCharacterIcon"
        app:layout_constraintTop_toTopOf="@+id/ivCharacterIcon"
        tools:text="John Stark" />

    <TextView
        android:id="@+id/tvCharacterCulture"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="@+id/tvCharacterName"
        app:layout_constraintTop_toBottomOf="@id/tvCharacterName"
        tools:text="culture" />

</androidx.constraintlayout.widget.ConstraintLayout>