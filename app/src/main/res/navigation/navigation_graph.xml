<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/nav_houses">
    <fragment
        android:id="@+id/nav_splash"
        android:name="ru.skillbranch.gameofthrones.presentation.view.adapter.fragment.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fr_splash" >
        <action
            android:id="@+id/action_nav_splash_to_nav_houses"
            app:destination="@id/nav_houses"
            app:launchSingleTop="true"
            app:popUpTo="@id/nav_houses"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/nav_houses"
        android:name="ru.skillbranch.gameofthrones.presentation.view.adapter.fragment.HouseFragment"
        android:label="fragment_houses"
        tools:layout="@layout/fr_houses" >
        <action
            android:id="@+id/action_nav_houses_to_nav_character"
            app:destination="@id/nav_character" />
    </fragment>
    <fragment
        android:id="@+id/nav_character"
        android:name="ru.skillbranch.gameofthrones.presentation.view.adapter.fragment.CharacterFragment"
        android:label="fragment_character"
        tools:layout="@layout/fr_character" >
        <argument android:name="characterId"
            app:argType="string" />
        <argument
            android:name="house"
            app:argType="string" />
        <argument
            android:name="title"
            app:argType="string" />
        <action
            android:id="@+id/action_nav_character_self"
            app:destination="@id/nav_character" />
    </fragment>
</navigation>